@rendermode InteractiveServer

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavGroup Title="Codesys 3.5" Icon="@(new Icons.Regular.Size20.DeviceEq())" @bind-Expanded="expandedCodesys35" ">
                <FluentNavLink Href="Codesys35/Iec608705Converter" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">IEC 60870-5-104</FluentNavLink>
            </FluentNavGroup>
            <FluentNavGroup Title="Codesys 2.3" Icon="@(new Icons.Regular.Size20.DeviceEq())" @bind-Expanded="expandedCodesys23">
                <FluentNavLink Href="Codesys23/Iec608705Converter" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">IEC 60870-5-104</FluentNavLink>
            </FluentNavGroup>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
    private bool expandedCodesys35 = true;
    private bool expandedCodesys23 = true;
}

